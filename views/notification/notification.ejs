                    method: 'DELETE',
                });

                if (response.ok) {
                    // 3. Find the specific card using its unique ID
                    const element = document.getElementById(`notif-${id}`);

                    // 4. Smooth Animation
                    element.style.opacity = "0";
                    element.style.transform = "scale(0.95)";
                    element.style.transition = "all 0.3s ease";

                    setTimeout(() => {
                        element.remove();

                        // 5. If no notifications left, refresh to show "All caught up" state
                        const remaining = document.querySelectorAll('[id^="notif-"]').length;
                        if (remaining === 0) {
                            window.location.reload();
                        }
                    }, 300);
                }
            } catch (err) {
                console.error("AJAX Error:", err);
            }
        }

