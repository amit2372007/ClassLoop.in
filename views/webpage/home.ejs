          <article class="glass-card rounded-2xl mb-5 pb-5 overflow-hidden border border-white/5 shadow-lg flex flex-col transition-all">
            <div class="p-4 flex items-center justify-between">
              <a href="/user/${post.owner._id}" class="flex items-center gap-3 group">
                <div class="size-10 rounded-full bg-cover bg-center ring-2 ring-white/10" data-alt="${post.owner.name} profile image"
                  style="background-image: url('${post.owner.profilePic ? post.owner.profilePic.url : ''}')"></div>
                <div class="flex flex-col justify-center">
                  <p class="text-[15px] font-bold text-white group-hover:text-primary transition-colors leading-tight">
                    ${post.owner.name}
                  </p>
                  <p class="text-[11px] text-white/40 font-medium mt-0.5">
                    ${date} • BFGI
                  </p>
                </div>
              </a>
          `;

          // Add Edit/Delete menu if owner
          if (isOwner) {
            postHTML += `
              <div class="relative post-menu-container">
                <button class="menu-button-toggle p-2 -mr-2 hover:bg-white/10 rounded-full transition-colors outline-none active:scale-95">
                  <span class="material-symbols-outlined text-white/60 text-[22px]">more_vert</span>
                </button>
                <div class="hidden post-dropdown absolute right-0 mt-2 w-48 bg-[#1a1a1a]/95 backdrop-blur-xl rounded-2xl shadow-[0_10px_40px_rgba(0,0,0,0.8)] border border-white/10 z-50 py-1.5 overflow-hidden transform origin-top-right transition-all">
