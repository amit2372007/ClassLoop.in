<% layout("/layout/boilerplate.ejs") -%>

<body>
    <form action="/post/edit/<%= Post.id %>?_method=PUT" method="POST">
<div class="field">
      <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" name="post[owner]" placeholder="Update your Name" value="<%= Post.owner %>">
    </div>
</div>

<div class="field">
      <label class="label">Post URL</label>
    <div class="control">
      <input class="input" type="text" name="post[image]" placeholder="Update Post URL" value="<%= Post.image %>">
    </div>
</div>

<div class="field">
      <label class="label">Description</label>
    <div class="control">
      <textarea class="input" name="post[description]" type="text" >Hi this Name</textarea>
    </div>
</div>

<button type="submit" class="button is-success">Update Post</button>
</form>

</body>