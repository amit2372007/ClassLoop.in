<!DOCTYPE html>
<html class="dark" lang="en">
<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>ClassLoop | Add New Doubt</title>
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
  <script id="tailwind-config">
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            "primary": "#8a2ce2",
            "background-dark": "#0d1117",
            "card-dark": "#161B22",
          },
          borderRadius: { "xl": "1.5rem" },
        },
      },
    }
  </script>
  <style>
    body { font-family: 'Inter', sans-serif; }
    .glass-card { background-color: rgba(22, 27, 34, 0.8); backdrop-filter: blur(12px); border: 1px solid rgba(255, 255, 255, 0.1); }
  </style>
</head>

<body class="bg-background-dark min-h-screen flex items-center justify-center p-6">
  <div class="relative flex h-auto w-full flex-col items-center justify-center">
    
    <form action="/doubtBin/ask-doubt" method="POST" id="doubtForm" class="flex flex-col max-w-md w-full glass-card rounded-xl p-8 shadow-2xl">
      
      <header class="flex flex-col items-center mb-8">
        <a href="/doubtBin" class="flex items-center gap-3 text-white mb-4">
          Back to DoubtBin
        </a>
        <h1 class="text-white text-2xl font-bold text-center">Add New Doubt</h1>
        <p class="text-[#ab9eb7] text-sm mt-1 text-center">Visible to Classmates and Teachers</p>
      </header>

      <div class="space-y-6">
        <div class="flex flex-col gap-2">
          <label class="text-white text-sm font-medium">Doubt Title <span class="text-primary">*</span></label>
          <input required name="title" class="form-input w-full rounded-lg text-white border-white/10 bg-white/5 focus:ring-2 focus:ring-primary h-12 px-4 text-sm" placeholder="e.g. How to use Express.Router?" type="text" />
        </div>

        <div class="flex flex-col gap-2">
          <label class="text-white text-sm font-medium">Description</label>
          <textarea required name="description" class="form-input w-full resize-none rounded-lg text-white border-white/10 bg-white/5 focus:ring-2 focus:ring-primary min-h-[120px] p-4 text-sm" placeholder="Provide details about your problem..."></textarea>
        </div>

        <div class="flex flex-col gap-3">
          <label class="text-white text-sm font-medium">Tags <span class="text-xs text-gray-500">(Max 3)</span></label>
          <div class="flex w-full gap-2">
            <input id="tagInput" class="form-input flex-1 rounded-lg text-white border-white/10 bg-white/5 focus:ring-2 focus:ring-primary h-11 px-4 text-sm" placeholder="Enter a tag..." type="text" />
            <button type="button" onclick="addTag()" class="bg-primary hover:bg-primary/90 text-white font-semibold px-5 rounded-lg text-sm transition-colors">Add</button>
          </div>
          
          <input type="hidden" name="tag1" id="tag1">
          <input type="hidden" name="tag2" id="tag2">
          <input type="hidden" name="tag3" id="tag3">

          <div id="tagPillsContainer" class="flex flex-wrap gap-2 pt-2">
            </div>
        </div>

        <div class="pt-4">
          <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-4 rounded-xl text-base shadow-lg shadow-primary/20 transition-all active:scale-[0.98]">
            Ask Doubt
          </button>
        </div>
      </div>

      <footer class="mt-8 pt-6 border-t border-white/5 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="size-9 rounded-full border border-primary/40 overflow-hidden bg-cover bg-center" style="background-image: url('<%=currUser.profilePic.url%>')"></div>
          <div class="flex flex-col">
            <span class="text-white text-xs font-semibold"><%=currUser.name%></span>
            <span class="text-[#ab9eb7] text-[10px] uppercase tracking-wider"><%=currUser.designation%></span>
          </div>
        </div>
      </footer>
    </form>

    <div class="fixed -z-10 top-1/4 -left-20 w-80 h-80 bg-primary/20 rounded-full blur-[120px]"></div>
  </div>

  <script>
    let tags = [];

    function addTag() {
      const input = document.getElementById('tagInput');
      const val = input.value.trim();
      
      if (val && tags.length < 3 && !tags.includes(val)) {
        tags.push(val);
        input.value = '';
        renderTags();
      } else if (tags.length >= 3) {
        alert("Maximum 3 tags allowed");
      }
    }

    function removeTag(index) {
      tags.splice(index, 1);
      renderTags();
    }

    function renderTags() {
      const container = document.getElementById('tagPillsContainer');
      container.innerHTML = '';
      
      // Update hidden inputs for route (tag1, tag2, tag3)
      document.getElementById('tag1').value = tags[0] || "";
      document.getElementById('tag2').value = tags[1] || "";
      document.getElementById('tag3').value = tags[2] || "";

      tags.forEach((tag, index) => {
        container.innerHTML += `
          <div class="flex items-center gap-1.5 bg-primary/10 border border-primary/30 text-white py-1.5 pl-3 pr-2 rounded-full text-xs font-medium">
            ${tag}
            <button type="button" onclick="removeTag(${index})" class="text-[#ab9eb7] hover:text-white transition-colors">
              <span class="material-symbols-outlined text-base">close</span>
            </button>
          </div>
        `;
      });
    }

    // Support 'Enter' key for tags
    document.getElementById('tagInput').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        addTag();
      }
    });
  </script>
</body>
</html>