<% layout("/layout/boilerplate2.ejs") -%>

<main class="flex-1 overflow-y-auto h-screen custom-scrollbar">
    <header class="bg-white border-b border-slate-200 px-8 py-6 sticky top-0 z-10">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <div>
                <div class="flex items-center gap-3 mb-1">
                    <a href="/teacher/previewForms"
                        class="flex items-center gap-1 text-slate-500 hover:text-[var(--primary)] text-sm font-semibold transition-colors">
                        <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                        Back to Forms
                    </a>
                    <span class="px-2 py-0.5 bg-indigo-50 text-indigo-600 rounded text-[10px] font-bold tracking-wider uppercase">
                        Class <%= form.class.className %>-<%= form.class.section %>
                    </span>
                </div>
                <h1 class="text-2xl font-black text-slate-900">Form Analytics: <%= form.title %></h1>
            </div>
            <div class="flex items-center gap-3">
                <button class="px-4 py-2 bg-white border border-slate-200 rounded-lg text-sm font-bold text-slate-600 hover:bg-slate-50 flex items-center gap-2">
                    <span class="material-symbols-outlined text-[20px]">download</span>
                    Export CSV
                </button>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto px-8 py-8">
        <% 
            const totalCount = responses.length + pendingStudents.length;
            const completionRate = totalCount > 0 ? ((responses.length / totalCount) * 100).toFixed(1) : 0;
        %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 flex items-center gap-5">
                <div class="size-14 bg-slate-50 rounded-xl flex items-center justify-center text-slate-400">
                    <span class="material-symbols-outlined text-[32px]">groups</span>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Total Students</p>
                    <h3 class="text-2xl font-black text-slate-900"><%= totalCount %></h3>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 flex items-center gap-5 border-l-4 border-l-[var(--primary)]">
                <div class="size-14 bg-indigo-50 rounded-xl flex items-center justify-center text-[var(--primary)]">
                    <span class="material-symbols-outlined text-[32px]">task_alt</span>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Responses Received</p>
                    <h3 class="text-2xl font-black text-slate-900"><%= responses.length %></h3>
                    <p class="text-[11px] text-green-600 font-bold mt-1 italic"><%= completionRate %>% Completion</p>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 flex items-center gap-5 border-l-4 border-l-amber-400">
                <div class="size-14 bg-amber-50 rounded-xl flex items-center justify-center text-amber-500">
                    <span class="material-symbols-outlined text-[32px]">pending_actions</span>
                </div>
                <div>
                    <p class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">Pending Submissions</p>
                    <h3 class="text-2xl font-black text-slate-900"><%= pendingStudents.length.toString().padStart(2, '0') %></h3>
                    <p class="text-[11px] text-amber-600 font-bold mt-1">
                        <%= form.expiresAt ? 'Due ' + form.expiresAt.toLocaleDateString() : 'No Deadline' %>
                    </p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-10 gap-8">
            <div class="col-span-10 lg:col-span-7 space-y-6">
                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                    <div class="p-6 border-b border-slate-100 flex items-center justify-between">
                        <h2 class="text-lg font-black text-slate-900">Submissions Table</h2>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-slate-50 border-b border-slate-100">
                                <tr>
                                    <th class="px-6 py-4 text-[11px] font-black text-slate-500 uppercase tracking-widest">Student Name</th>
                                    <th class="px-6 py-4 text-[11px] font-black text-slate-500 uppercase tracking-widest">Roll No.</th>
                                    <th class="px-6 py-4 text-[11px] font-black text-slate-500 uppercase tracking-widest">Submission Date</th>
                                    <th class="px-6 py-4 text-[11px] font-black text-slate-500 uppercase tracking-widest text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100">
                                <% responses.forEach(res => { %>
                                <tr class="hover:bg-slate-50/50 transition-colors">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <img class="size-8 rounded-full bg-slate-100 object-cover"
                                                src="<%= res.student.profilePic.url %>" />
                                            <span class="text-sm font-semibold text-slate-700"><%= res.student.name %></span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-slate-500"><%= res.student.rollNumber || 'N/A' %></td>
                                    <td class="px-6 py-4 text-sm text-slate-500">
                                        <%= res.createdAt.toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %> â€¢ 
                                        <%= res.createdAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button onclick="openSubmission('<%= res._id %>')" 
        class="px-3 py-1.5 text-[11px] font-black uppercase tracking-wider text-[var(--primary)] hover:bg-indigo-50 rounded-lg transition-colors border border-indigo-100">
    View Answers
</button>
                                    </td>
                                </tr>
                                <% }) %>
                                <% if (responses.length === 0) { %>
                                    <tr><td colspan="4" class="px-6 py-10 text-center text-slate-400 italic">No submissions yet</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-span-10 lg:col-span-3">
                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-lg font-black text-slate-900">Pending Students</h2>
                        <span class="px-2 py-1 bg-amber-50 text-amber-600 rounded text-[10px] font-bold uppercase">
                            <%= pendingStudents.length %> REMAINING
                        </span>
                    </div>
                    <div class="space-y-4">
                        <% pendingStudents.forEach(student => { %>
                        <div class="flex items-center justify-between group p-2 hover:bg-slate-50 rounded-xl transition-colors">
                            <div class="flex items-center gap-3">
                                <img class="size-10 rounded-full bg-slate-100 object-cover" src="<%= student.profilePic.url %>" />
                                <div>
                                    <p class="text-sm font-bold text-slate-700"><%= student.name %></p>
                                    <p class="text-[10px] text-slate-400 font-bold uppercase">Roll: <%= student.rollNo || 'N/A' %></p>
                                </div>
                            </div>
                            <button class="size-8 rounded-lg flex items-center justify-center text-slate-400 hover:text-amber-500 hover:bg-amber-50 transition-all">
                                <span class="material-symbols-outlined text-[20px]">notifications</span>
                            </button>
                        </div>
                        <% }) %>
                        <% if (pendingStudents.length === 0) { %>
                            <p class="text-sm text-center text-green-500 font-bold py-4">All students have submitted! ðŸŽ‰</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="modal-container" class="hidden fixed inset-0 z-50">
    <div class="absolute inset-0 bg-slate-950/60 backdrop-blur-sm"></div>
    
    <div id="modal-content-target" class="fixed top-0 right-0 h-full w-full max-w-[580px] bg-white flex flex-col shadow-2xl">
        </div>
</div>
</main>


<script>
    async function openSubmission(responseId) {
    const container = document.getElementById('modal-container');
    const contentTarget = document.getElementById('modal-content-target');

    try {
        // 1. Fetch data
        const response = await fetch(`/teacher/response/${responseId}`);
        const html = await response.text();
        
        // 2. Inject and Show Instantly
        contentTarget.innerHTML = html;
        container.classList.remove('hidden');
        
        // Prevent background scrolling while viewing
        document.body.style.overflow = 'hidden'; 
    } catch (err) {
        console.error("Error loading submission:", err);
    }
}

function closeSubmission() {
    document.getElementById('modal-container').classList.add('hidden');
    document.body.style.overflow = 'auto'; // Restore scrolling
}
</script>