<% layout("/layout/boilerplate2.ejs") -%>


    <head>
        <title>Teacher Educator Portal | ClassLoop.in</title>
        <script id="tailwind-config">
            tailwind.config = {
                darkMode: "class",
                theme: {
                    extend: {
                        colors: {
                            "primary": "#4848e5",
                            "background-light": "#f6f6f8",
                            "background-dark": "#111121",
                        },
                        fontFamily: {
                            "display": ["Inter", "sans-serif"]
                        },
                        borderRadius: {
                            "DEFAULT": "0.5rem",
                            "lg": "1rem",
                            "xl": "1.5rem",
                            "full": "9999px"
                        },
                    },
                },
            }
        </script>
        <style>
            body {
                font-family: 'Inter', sans-serif;
            }

            .material-symbols-outlined {
                font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            }

            .custom-scrollbar::-webkit-scrollbar {
                height: 6px;
            }
            .custom-scrollbar::-webkit-scrollbar-track {
                background: transparent;
            }
            .custom-scrollbar::-webkit-scrollbar-thumb {
                background: #e2e8f0;
                border-radius: 10px;
            }
            .dark .custom-scrollbar::-webkit-scrollbar-thumb {
                background: #334155;
            }

            /* Reserve space at bottom on mobile so content isn't hidden behind bottom nav */
            @media (max-width: 1023px) {
                #main-content-area {
                    padding-bottom: 72px;
                }
            }
        </style>
    </head>

    <body
        class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 min-h-screen">
        <div class="flex h-screen overflow-hidden">

            <%# LEFT SIDEBAR NAVIGATION — hidden on mobile, visible on lg+ %>
            <aside
                class="w-64 bg-white dark:bg-background-dark border-r border-slate-200 dark:border-slate-800 flex-col hidden lg:flex flex-shrink-0">
                <div class="p-6 flex items-center gap-3">
                    <a href="/home" class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center text-white">
                        <span class="material-symbols-outlined">school</span>
                    </a>
                    <a href="/home">
                        <h1 class="text-base font-bold leading-none">ClassLoop.in</h1>
                        <p class="text-xs text-slate-500 mt-1 uppercase tracking-wider font-semibold">Teacher Portal</p>
                    </a>
                </div>
                <nav class="flex-1 px-4 py-4 space-y-2 overflow-y-auto">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Overview' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Overview">
                        <span class="material-symbols-outlined text-[22px]">dashboard</span>
                        <span class="text-sm font-semibold">Overview</span>
                    </a>
                    <a href="/teacher?tab=Attendance"
                        class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Attendance' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>">
                        <span class="material-symbols-outlined text-[22px]">how_to_reg</span>
                        <span class="text-sm font-medium">Attendance</span>
                    </a>
                    <a href="/teacher?tab=Students"
                        class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Students' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>">
                        <span class="material-symbols-outlined text-[22px]">group</span>
                        <span class="text-sm font-medium">Students</span>
                    </a>
                    <a href="/teacher?tab=Assignments"
                        class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Assignments' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>">
                        <span class="material-symbols-outlined text-[22px]">assignment</span>
                        <span class="text-sm font-medium">Assignments</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Resources' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Resources">
                        <span class="material-symbols-outlined text-[22px]">Topic</span>
                        <span class="text-sm font-medium">Resources</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Timetable' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Timetable">
                        <span class="material-symbols-outlined text-[22px]">calendar_today</span>
                        <span class="text-sm font-medium">Timetable</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Form' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Form">
                        <span class="material-symbols-outlined text-[22px]">forms_add_on</span>
                        <span class="text-sm font-medium">Form</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Exam' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Exam">
                        <span class="material-symbols-outlined text-[22px]">quiz</span>
                        <span class="text-sm font-medium">Exam Marking</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Applications' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher?tab=Applications">
                        <span class="material-symbols-outlined text-[22px]">quiz</span>
                        <span class="text-sm font-medium">Applications</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl transition-colors <%= activeTab === 'Applications' ? 'bg-primary/10 text-primary' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800' %>"
                        href="/teacher/QrCode">
                        <span class="material-symbols-outlined text-[22px]">qr_code</span>
                        <span class="text-sm font-medium">Class QR Code</span>
                    </a>
                </nav>
                <div class="p-4 border-t border-slate-200 dark:border-slate-800">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                        href="/teacher?activeTab=Settings">
                        <span class="material-symbols-outlined text-[22px]">settings</span>
                        <span class="text-sm font-medium">Settings</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded-xl text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                        href="/teacher?tab=HelpCenter">
                        <span class="material-symbols-outlined text-[22px]">help</span>
                        <span class="text-sm font-medium">Help Center</span>
                    </a>
                </div>
            </aside>

            <%# MAIN CONTENT AREA — wraps tab includes, full width on mobile %>
            <div id="main-content-area" class="flex-1 overflow-y-auto min-w-0">

                <% if(activeTab==='Overview' ) { %>
                    <%- include("../includes/teacherDashboard/Overview.ejs") %>
                <% } else if(activeTab==='Attendance' ) {%>
                    <%- include("../includes/teacherDashboard/Attendance.ejs") %>
                <% } else if(activeTab==='Students' ){%>
                    <%- include("../includes/teacherDashboard/Students.ejs") %>
                <% } else if(activeTab==='Assignments' ) {%>
                    <%- include("../includes/teacherDashboard/Assignments.ejs") %>
                <% } else if(activeTab==='Form' ) {%>
                    <%- include("../includes/teacherDashboard/Form.ejs") %>
                <% } else if(activeTab==='Exam' ) {%>
                    <%- include("../includes/teacherDashboard/Exam.ejs") %>
                <% } else if(activeTab==='Resources' ) { %>
                    <%- include("../includes/teacherDashboard/Resources.ejs") %>
                <% } else if(activeTab === 'Applications') {  %>
                    <%- include("../includes/teacherDashboard/Applications.ejs") %>
                <% } %>

            </div>
        </div>

        <%# MOBILE BOTTOM NAVIGATION — only visible on mobile/tablet (hidden on lg+) %>
        <nav class="lg:hidden fixed bottom-0 left-0 right-0 z-50 bg-white dark:bg-background-dark border-t border-slate-200 dark:border-slate-800 flex items-stretch">

            <%# Row 1 of nav tabs: Overview, Attendance, Students, Assignments %>
            <a href="/teacher?tab=Overview"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors <%= activeTab === 'Overview' ? 'text-primary' : 'text-slate-500 dark:text-slate-400' %>">
                <span class="material-symbols-outlined text-[22px]">dashboard</span>
                <span class="text-[9px] font-semibold leading-none">Overview</span>
            </a>

            <a href="/teacher?tab=Attendance"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors <%= activeTab === 'Attendance' ? 'text-primary' : 'text-slate-500 dark:text-slate-400' %>">
                <span class="material-symbols-outlined text-[22px]">how_to_reg</span>
                <span class="text-[9px] font-semibold leading-none">Attendance</span>
            </a>

            <a href="/teacher?tab=Students"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors <%= activeTab === 'Students' ? 'text-primary' : 'text-slate-500 dark:text-slate-400' %>">
                <span class="material-symbols-outlined text-[22px]">group</span>
                <span class="text-[9px] font-semibold leading-none">Students</span>
            </a>

            <a href="/teacher?tab=Assignments"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors <%= activeTab === 'Assignments' ? 'text-primary' : 'text-slate-500 dark:text-slate-400' %>">
                <span class="material-symbols-outlined text-[22px]">assignment</span>
                <span class="text-[9px] font-semibold leading-none">Assignments</span>
            </a>

            <a href="/teacher?tab=Resources"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors <%= activeTab === 'Resources' ? 'text-primary' : 'text-slate-500 dark:text-slate-400' %>">
                <span class="material-symbols-outlined text-[22px]">Topic</span>
                <span class="text-[9px] font-semibold leading-none">Resources</span>
            </a>

            <%# "More" button opens a slide-up drawer for the remaining tabs %>
            <button onclick="document.getElementById('mobile-more-drawer').classList.toggle('translate-y-full')"
               class="flex-1 flex flex-col items-center justify-center gap-0.5 py-2.5 transition-colors text-slate-500 dark:text-slate-400">
                <span class="material-symbols-outlined text-[22px]">more_horiz</span>
                <span class="text-[9px] font-semibold leading-none">More</span>
            </button>
        </nav>

        <%# MOBILE "MORE" DRAWER — slide up from bottom for secondary nav items %>
        <div id="mobile-more-drawer"
             class="lg:hidden fixed inset-0 z-[60] flex flex-col justify-end translate-y-full transition-transform duration-300 ease-in-out">
            <%# Backdrop %>
            <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"
                 onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"></div>
            <%# Drawer panel %>
            <div class="relative bg-white dark:bg-[#1a1a2e] rounded-t-2xl border-t border-slate-200 dark:border-slate-700 p-5 pb-8">
                <div class="w-10 h-1 bg-slate-300 dark:bg-slate-600 rounded-full mx-auto mb-5"></div>
                <p class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-4">More Sections</p>
                <div class="grid grid-cols-3 gap-3">

                    <a href="/teacher?tab=Timetable"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl transition-colors <%= activeTab === 'Timetable' ? 'bg-primary/10 text-primary' : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300' %>">
                        <span class="material-symbols-outlined text-[24px]">calendar_today</span>
                        <span class="text-xs font-semibold">Timetable</span>
                    </a>

                    <a href="/teacher?tab=Form"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl transition-colors <%= activeTab === 'Form' ? 'bg-primary/10 text-primary' : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300' %>">
                        <span class="material-symbols-outlined text-[24px]">forms_add_on</span>
                        <span class="text-xs font-semibold">Form</span>
                    </a>

                    <a href="/teacher?tab=Exam"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl transition-colors <%= activeTab === 'Exam' ? 'bg-primary/10 text-primary' : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300' %>">
                        <span class="material-symbols-outlined text-[24px]">quiz</span>
                        <span class="text-xs font-semibold">Exam</span>
                    </a>

                    <a href="/teacher?tab=Applications"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl transition-colors <%= activeTab === 'Applications' ? 'bg-primary/10 text-primary' : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300' %>">
                        <span class="material-symbols-outlined text-[24px]">quiz</span>
                        <span class="text-xs font-semibold">Applications</span>
                    </a>

                    <a href="/teacher?activeTab=Settings"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 transition-colors">
                        <span class="material-symbols-outlined text-[24px]">settings</span>
                        <span class="text-xs font-semibold">Settings</span>
                    </a>

                    <a href="/teacher/QrCode"
                       onclick="document.getElementById('mobile-more-drawer').classList.add('translate-y-full')"
                       class="flex flex-col items-center gap-2 p-3 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 transition-colors">
                        <span class="material-symbols-outlined text-[24px]">qr_code</span>
                        <span class="text-xs font-semibold">Class QR Code</span>
                    </a>

                    

                </div>
            </div>
        </div>

    </body>

    </html>
