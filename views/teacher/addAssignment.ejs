<% layout("/layout/boilerplate2.ejs") -%>
    <title>Create Assignment - ClassLoop.in</title>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2563EB",
                        "background-light": "#f6f6f8",
                        "background-dark": "#111621",
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">body {
    font-family: "Inter", sans-serif
    }
.modal-overlay {
    background-color: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(4px)
    }
.custom-select {
    appearance: none;
    background-image: url(https://lh3.googleusercontent.com/aida-public/AB6AXuAuNbxAVM0m9uvd2JyvqcPKGz0Zexox3TkmE0vg5a4aFq7GXlDriF0DTtRxZ9yQdxOJPEJDFY5mxKse9Q4GF6qDlGVTlQLjNzPV6Lbx5BWSJeYOQkA06ecGHr7ZUuO41mI7gbZoAIIGPGkIup4bbnNfUrYQAAkQE9aOVBKbMx8oKaTpSn8Ecd3wcbxUellMqdBKWqLjVjvlHoFleFUDSSLHdGzoDAF5csBBIXwlp5DFL4XjmcvXEoGGPW2OSSHyDtTEL-jqvYe5y2zd);
    background-position: right 0.5rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em
    }</style>


    <body class="bg-background-light  dark:bg-background-dark font-display min-h-screen">
        <div class="relative flex h-screen w-full flex-col overflow-hidden opacity-40 pointer-events-none">
            <header
                class="flex items-center justify-between border-b border-solid border-[#e7ebf3] dark:border-gray-800 px-10 py-3 bg-white dark:bg-gray-900">
                <div class="flex items-center gap-8">
                    <div class="flex items-center gap-4 text-[#0e121b] dark:text-white">
                        <div class="size-6 text-primary">
                            <span class="material-symbols-outlined">school</span>
                        </div>
                        <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">ClassLoop.in</h2>
                    </div>
                    <div class="flex items-center gap-9">
                        <span class="text-sm font-medium">Dashboard</span>
                        <span class="text-sm font-medium">Assignments</span>
                        <span class="text-sm font-medium">Students</span>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <div class="h-10 w-64 bg-gray-100 dark:bg-gray-800 rounded-xl"></div>
                    <div class="size-10 bg-gray-200 dark:bg-gray-700 rounded-full"></div>
                </div>
            </header>
            <main class="p-10">
                <div class="grid grid-cols-3 gap-6">
                    <div class="h-40 bg-white dark:bg-gray-800 rounded-xl shadow-sm"></div>
                    <div class="h-40 bg-white dark:bg-gray-800 rounded-xl shadow-sm"></div>
                    <div class="h-40 bg-white dark:bg-gray-800 rounded-xl shadow-sm"></div>
                </div>
            </main>
        </div>
        <div class="fixed inset-0 z-50 flex items-center justify-center p-4 modal-overlay">
            <div
                class="bg-white dark:bg-[#1a2130] w-full max-w-[620px] rounded-xl shadow-2xl flex flex-col overflow-hidden">
                <div class="flex items-center justify-between px-8 pt-8 pb-4">
                    <div>
                        <h2 class="text-[#0e121b] dark:text-white text-2xl font-bold tracking-tight">Add New Assignment
                        </h2>
                        <p class="text-slate-500 dark:text-slate-400 text-sm mt-1">Create and distribute a new task for
                            your
                            students.</p>
                    </div>
                    <a href="/teacher?tab=Assignments"
                        class="text-slate-400 hover:text-slate-600 dark:hover:text-white transition-colors">
                        <span class="material-symbols-outlined">close</span>
                    </a>
                </div>
                <div class="px-8 py-4 overflow-y-auto max-h-[75vh]">
                    <form action="/teacher/addAssignment" method="POST" enctype="multipart/form-data" class="space-y-5">
                        <div class="flex flex-col md:flex-row gap-4">
                            <div class="flex-1">
                                <label
                                    class="block text-slate-700 dark:text-slate-300 text-sm font-semibold mb-2">Subject</label>
                                <select name="subject" required
                                    class="custom-select w-full h-12 px-4 rounded-lg border border-[#d0d7e7] dark:border-gray-700 bg-white dark:bg-gray-800 text-[#0e121b] dark:text-white focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all">
                                    <option value="">Select Subject</option>
                                    <%for(let Subject of subjects) { %>
                                        <option value="<%=Subject.name%>">
                                            <%=Subject.name%>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                            <div class="flex-1">
                                <label class="block text-slate-700 dark:text-slate-300 text-sm font-semibold mb-2">Due
                                    Date</label>
                                <div class="relative">
                                    <span
                                        class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 text-xl pointer-events-none">calendar_today</span>
                                    <input
                                        type="date" name="dueDate"
                                        class="w-full h-12 px-4 rounded-lg border border-[#d0d7e7] dark:border-gray-700 bg-white dark:bg-gray-800 text-[#0e121b] dark:text-white focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                                        type="date" required/>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label
                                class="block text-slate-700 dark:text-slate-300 text-sm font-semibold mb-2">Assignment
                                Title</label>
                            <input name="title"
                                class="w-full h-12 px-4 rounded-lg border border-[#d0d7e7] dark:border-gray-700 bg-white dark:bg-gray-800 text-[#0e121b] dark:text-white focus:ring-2 focus:ring-primary focus:border-primary placeholder:text-slate-400 outline-none transition-all"
                                placeholder="e.g. Calculus Problem Set #4" type="text" />
                        </div>
                        <div>
                            <label
                                class="block text-slate-700 dark:text-slate-300 text-sm font-semibold mb-2">Description</label>
                            <textarea name="description"
                                class="w-full p-4 rounded-lg border border-[#d0d7e7] dark:border-gray-700 bg-white dark:bg-gray-800 text-[#0e121b] dark:text-white focus:ring-2 focus:ring-primary focus:border-primary placeholder:text-slate-400 outline-none transition-all resize-none"
                                placeholder="Provide detailed instructions for the assignment..." rows="5"></textarea>
                        </div>
                        <div>
                            <label
                                class="relative border-2 border-dashed border-[#d0d7e7] dark:border-gray-700 rounded-xl p-6 flex flex-col items-center justify-center bg-slate-50/50 dark:bg-gray-800/50 hover:bg-slate-50 dark:hover:bg-gray-800 transition-colors cursor-pointer group">
                                <input type="file" name="attachments"
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" multiple
                                    id="file-upload">

                                <span
                                    class="material-symbols-outlined text-4xl text-slate-400 group-hover:text-primary transition-colors mb-2">
                                    upload_file
                                </span>
                                <p class="text-sm font-medium text-slate-600 dark:text-slate-300">
                                    Click to upload or drag and drop
                                </p>
                                <p class="text-xs text-slate-400 mt-1" id="file-name-display">
                                    PDF, DOCX, or Images (Max 10MB)
                                </p>
                            </label>
                        </div>

                </div>
                <div class="px-8 pb-8 pt-4 flex flex-col gap-4">
                    <div class="flex gap-3">
                        <button type="submit"
                            class="flex-1 h-12 px-6 rounded-lg bg-primary hover:bg-blue-700 text-white font-bold transition-all flex items-center justify-center gap-2 shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined text-xl">add_task</span>
                            Create Assignment
                        </button>
                        <a href="/teacher?tab=Assignments"
                            class="px-8 h-12 rounded-lg border border-[#d0d7e7] dark:border-gray-700 text-slate-600 dark:text-slate-300 font-semibold hover:bg-slate-50 dark:hover:bg-gray-800 transition-all">
                            Cancel
                        </a>
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </body>

    <script>
        document.getElementById('file-upload').addEventListener('change', function (e) {
            const fileNameDisplay = document.getElementById('file-name-display');
            const files = e.target.files;

            if (files.length > 0) {
                fileNameDisplay.innerText = files.length === 1
                    ? `Selected: ${files[0].name}`
                    : `${files.length} files selected`;
                fileNameDisplay.classList.add('text-primary', 'font-bold');
            }
        });
    </script>