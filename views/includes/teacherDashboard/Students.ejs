<main class="flex-1 flex flex-col overflow-hidden">
                            <header
                                class="h-16 bg-white dark:bg-background-dark border-b border-slate-200 dark:border-slate-800 px-6 flex items-center justify-between shrink-0">
                                <div class="flex items-center gap-6">
                                    <h2 class="text-lg font-bold">All Students</h2>
                                    <div
                                        class="flex items-center gap-2 px-3 py-1 bg-primary/10 rounded-full border border-primary/20">
                                        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                                        <span class="text-xs font-bold text-primary uppercase tracking-wide">Class
                                            <%=currClass.className%>-<%=currClass.section%></span>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <button
                                        class="w-10 h-10 rounded-xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors relative">
                                        <span
                                            class="material-symbols-outlined text-slate-600 dark:text-slate-300">notifications</span>
                                        <span
                                            class="absolute top-2.5 right-2.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white dark:border-background-dark"></span>
                                    </button>
                                    <div
                                        class="h-10 w-10 rounded-xl overflow-hidden bg-slate-200 border-2 border-slate-100 dark:border-slate-800">
                                        <img alt="Profile"
                                            src="<%=currUser.profilePic.url%>" />
                                    </div>
                                </div>
                            </header>
                            <div
                                class="p-6 bg-white dark:bg-background-dark border-b border-slate-200 dark:border-slate-800 flex flex-col md:flex-row gap-4 items-center justify-between">
                                <div class="relative w-full md:w-96">
                                    <span
                                        class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-xl">search</span>
                                    <input
                                        class="w-full pl-10 pr-4 py-2.5 bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent outline-none"
                                        placeholder="Search by name or roll number..." type="text" />
                                </div>
                                <div class="flex items-center gap-3 w-full md:w-auto">
                                    <div
                                        class="flex items-center gap-2 px-4 py-2.5 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl cursor-pointer hover:bg-slate-50 transition-colors">
                                        <span class="material-symbols-outlined text-slate-500 text-xl">filter_alt</span>
                                        <span class="text-sm font-medium">Filter By Performance</span>
                                    </div>
                                    <form action="/teacher/addStudent" method="GET">
                                    <button
                                        class="flex-1 md:flex-none flex items-center justify-center gap-2 px-6 py-2.5 bg-primary text-white text-sm font-bold rounded-xl hover:bg-primary/90 transition-shadow shadow-sm">
                                        <span class="material-symbols-outlined text-lg">person_add</span>
                                        Add Student
                                    </button>
                                    </form>
                                </div>
                            </div>
                            <div class="flex-1 overflow-y-auto p-6 bg-slate-50/50 dark:bg-background-dark/50">
                                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                                    <% for(Student of currClass.students) { %>
                                    <div
                                        class="bg-white dark:bg-background-dark border border-slate-200 dark:border-slate-800 p-5 rounded-xl hover:shadow-lg transition-all group">
                                        <div class="flex flex-col items-center text-center space-y-4">
                                            <div class="relative">
                                                <img alt="<%=Student.name%>"
                                                    class="w-20 h-20 rounded-full object-cover ring-4 ring-slate-50 dark:ring-slate-800"
                                                    src="<%=Student.profilePic.url%>" />
                                                <% if(Student.isActive == true) { %>
                                                <span
                                                    class="absolute bottom-0 right-0 w-5 h-5 bg-emerald-500 border-2 border-white dark:border-background-dark rounded-full"></span>
                                                <% } %>
                                            </div>
                                            <div>
                                                <h3 class="font-bold text-slate-900 dark:text-white"><%=Student.name%></h3>
                                                <p class="text-xs font-semibold text-primary uppercase tracking-wider">
                                                    Roll No: <%=Student.rollNumber%></p>
                                            </div>
                                            <div
                                                class="w-full space-y-2 pt-2 border-t border-slate-100 dark:border-slate-800">
                                                <div
                                                    class="flex items-center justify-center gap-2 text-slate-500 dark:text-slate-400">
                                                    <span class="material-symbols-outlined text-base">call</span>
                                                    <span class="text-xs font-medium">+91 <%=Student.phone%></span>
                                                </div>
                                            </div>
                                            <div class="flex items-center justify-center gap-2 w-full pt-4">
                                                <a href="/user/<%=Student._id%>"
                                                    class="p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                                                    title="View Performance">
                                                    <span class="material-symbols-outlined text-lg">account_circle</span>
                                                </a>
                                                <button
                                                    class="p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                                                    title="Message Parent">
                                                    <span class="material-symbols-outlined text-lg">mail</span>
                                                </button>
                                                <button
                                                    class="p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                                                    title="Edit Details">
                                                    <span class="material-symbols-outlined text-lg">edit</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <div
                                class="h-14 bg-white dark:bg-background-dark border-t border-slate-200 dark:border-slate-800 px-6 flex items-center justify-between shrink-0">
                                <span class="text-sm text-slate-500 font-medium">Showing 8 of 42 students</span>
                                <div class="flex items-center gap-2">
                                    <button class="p-1 text-slate-400 hover:text-slate-600 disabled:opacity-50"
                                        disabled="">
                                        <span class="material-symbols-outlined">chevron_left</span>
                                    </button>
                                    <div class="flex items-center gap-1">
                                        <button
                                            class="w-7 h-7 flex items-center justify-center rounded bg-primary text-white text-xs font-bold">1</button>
                                        <button
                                            class="w-7 h-7 flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">2</button>
                                        <button
                                            class="w-7 h-7 flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">3</button>
                                        <span class="text-slate-300 px-1">...</span>
                                        <button
                                            class="w-7 h-7 flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">6</button>
                                    </div>
                                    <button class="p-1 text-slate-400 hover:text-slate-600">
                                        <span class="material-symbols-outlined">chevron_right</span>
                                    </button>
                                </div>
                            </div>
                        </main>