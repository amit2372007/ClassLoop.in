<main class="flex-1 flex flex-col overflow-hidden">

    <!-- Header -->
    <header class="h-auto min-h-[64px] bg-white dark:bg-background-dark border-b border-slate-200 dark:border-slate-800 px-3 sm:px-6 py-3 flex items-center justify-between gap-3 shrink-0 flex-wrap">
        <div class="flex items-center gap-2 sm:gap-6 flex-wrap">
            <h2 class="text-base sm:text-lg font-bold">All Students</h2>
            <div class="flex items-center gap-2 px-3 py-1 bg-primary/10 rounded-full border border-primary/20">
                <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                <span class="text-xs font-bold text-primary uppercase tracking-wide">Class
                    <%=currClass.className%>-<%=currClass.section%></span>
            </div>
        </div>
        <div class="flex items-center gap-2 sm:gap-4">
            <button class="w-9 h-9 sm:w-10 sm:h-10 rounded-xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors relative">
                <span class="material-symbols-outlined text-slate-600 dark:text-slate-300 text-xl">notifications</span>
                <span class="absolute top-2 right-2 sm:top-2.5 sm:right-2.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white dark:border-background-dark"></span>
            </button>
            <div class="h-9 w-9 sm:h-10 sm:w-10 rounded-xl overflow-hidden bg-slate-200 border-2 border-slate-100 dark:border-slate-800 flex-shrink-0">
                <img alt="Profile" src="<%=currUser.profilePic.url%>" />
            </div>
        </div>
    </header>

    <!-- Search & Filter bar -->
    <div class="p-3 sm:p-6 bg-white dark:bg-background-dark border-b border-slate-200 dark:border-slate-800 flex flex-col gap-3">
        <!-- Search -->
        <div class="relative w-full">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-xl">search</span>
            <input
                class="w-full pl-10 pr-4 py-2.5 bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent outline-none"
                placeholder="Search by name or roll number..." type="text" />
        </div>
        <!-- Filter + Add row -->
        <div class="flex items-center gap-2 sm:gap-3">
            <div class="flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-2.5 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl cursor-pointer hover:bg-slate-50 transition-colors flex-1 sm:flex-none">
                <span class="material-symbols-outlined text-slate-500 text-lg sm:text-xl">filter_alt</span>
                <span class="text-xs sm:text-sm font-medium truncate">Filter By Performance</span>
            </div>
            <form action="/teacher/addStudent" method="GET" class="flex-1 sm:flex-none">
                <button class="w-full flex items-center justify-center gap-2 px-4 sm:px-6 py-2.5 bg-primary text-white text-xs sm:text-sm font-bold rounded-xl hover:bg-primary/90 transition-shadow shadow-sm">
                    <span class="material-symbols-outlined text-base sm:text-lg">person_add</span>
                    Add Student
                </button>
            </form>
        </div>
    </div>

    <!-- Student grid -->
    <div class="flex-1 overflow-y-auto p-3 sm:p-6 bg-slate-50/50 dark:bg-background-dark/50">
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 sm:gap-6">
            <% for(Student of currClass.students) { %>
            <div class="bg-white dark:bg-background-dark border border-slate-200 dark:border-slate-800 p-3 sm:p-5 rounded-xl hover:shadow-lg transition-all group">
                <div class="flex flex-col items-center text-center space-y-3 sm:space-y-4">
                    <div class="relative">
                        <img alt="<%=Student.name%>"
                            class="w-14 h-14 sm:w-20 sm:h-20 rounded-full object-cover ring-4 ring-slate-50 dark:ring-slate-800"
                            src="<%=Student.profilePic.url%>" />
                        <% if(Student.isActive == true) { %>
                        <span class="absolute bottom-0 right-0 w-4 h-4 sm:w-5 sm:h-5 bg-emerald-500 border-2 border-white dark:border-background-dark rounded-full"></span>
                        <% } %>
                    </div>
                    <div>
                        <h3 class="font-bold text-slate-900 dark:text-white text-sm sm:text-base leading-tight"><%=Student.name%></h3>
                        <p class="text-[10px] sm:text-xs font-semibold text-primary uppercase tracking-wider mt-0.5">
                            Roll No: <%=Student.rollNumber%></p>
                    </div>
                    <div class="w-full space-y-2 pt-2 border-t border-slate-100 dark:border-slate-800">
                        <div class="flex items-center justify-center gap-1.5 sm:gap-2 text-slate-500 dark:text-slate-400">
                            <span class="material-symbols-outlined text-sm sm:text-base">call</span>
                            <span class="text-[10px] sm:text-xs font-medium">+91 <%=Student.phone%></span>
                        </div>
                    </div>
                    <div class="flex items-center justify-center gap-1.5 sm:gap-2 w-full pt-2 sm:pt-4">
                        <a href="/user/<%=Student._id%>"
                            class="p-2 sm:p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                            title="View Performance">
                            <span class="material-symbols-outlined text-base sm:text-lg">account_circle</span>
                        </a>
                        <button
                            class="p-2 sm:p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                            title="Message Parent">
                            <span class="material-symbols-outlined text-base sm:text-lg">mail</span>
                        </button>
                        <button
                            class="p-2 sm:p-2.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-primary hover:text-white transition-colors"
                            title="Edit Details">
                            <span class="material-symbols-outlined text-base sm:text-lg">edit</span>
                        </button>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Pagination footer -->
    <div class="h-auto min-h-[56px] bg-white dark:bg-background-dark border-t border-slate-200 dark:border-slate-800 px-3 sm:px-6 py-2 sm:py-0 flex items-center justify-between gap-2 shrink-0 flex-wrap">
        <span class="text-xs sm:text-sm text-slate-500 font-medium">Showing 8 of 42 students</span>
        <div class="flex items-center gap-1 sm:gap-2">
            <button class="p-1 text-slate-400 hover:text-slate-600 disabled:opacity-50" disabled="">
                <span class="material-symbols-outlined text-lg sm:text-xl">chevron_left</span>
            </button>
            <div class="flex items-center gap-1">
                <button class="w-7 h-7 flex items-center justify-center rounded bg-primary text-white text-xs font-bold">1</button>
                <button class="w-7 h-7 flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">2</button>
                <button class="w-7 h-7 hidden sm:flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">3</button>
                <span class="text-slate-300 px-1 hidden sm:inline">...</span>
                <button class="w-7 h-7 hidden sm:flex items-center justify-center rounded text-slate-600 hover:bg-slate-100 text-xs font-bold">6</button>
            </div>
            <button class="p-1 text-slate-400 hover:text-slate-600">
                <span class="material-symbols-outlined text-lg sm:text-xl">chevron_right</span>
            </button>
        </div>
    </div>

</main>
