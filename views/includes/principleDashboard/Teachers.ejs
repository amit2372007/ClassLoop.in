<main class="flex-1 ml-64 min-h-screen flex flex-col">
  <header class="h-20 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800 flex items-center justify-between px-8 sticky top-0 z-10">
    <div>
      <h2 class="text-xl font-bold text-slate-800 dark:text-white">
        Teacher Directory
      </h2>
      <p class="text-slate-500 text-sm">Manage and oversee faculty members</p>
    </div>
    <div class="flex items-center gap-6">
      <a href="/school/add-teacher" class="bg-primary text-white px-5 py-2.5 rounded-lg flex items-center gap-2 text-sm font-semibold hover:bg-indigo-700 transition-colors shadow-sm">
        <span class="material-symbols-outlined text-lg">add</span>
        Add New Teacher
      </a>
      <div class="flex items-center gap-3">
        <div class="text-right hidden md:block">
          <p class="text-sm font-bold text-slate-800 dark:text-white">
            <%= Principle.name %>
          </p>
          <p class="text-xs text-slate-500">Principal Administrator</p>
        </div>
        <div class="size-10 rounded-full bg-primary/20 flex items-center justify-center overflow-hidden border-2 border-primary/30">
          <img 
            alt="Principal Profile" 
            class="w-full h-full object-cover" 
            src="<%= Principle.profilePic && Principle.profilePic.url ? Principle.profilePic.url : 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png' %>" 
          />
        </div>
      </div>
    </div>
  </header>

  <div class="p-8 space-y-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
        <div class="flex justify-between items-center mb-4">
          <div class="size-10 rounded-lg bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-primary">
            <span class="material-symbols-outlined">groups</span>
          </div>
          <span class="text-emerald-500 text-xs font-bold bg-emerald-50 dark:bg-emerald-900/20 px-2 py-1 rounded-full">+4 this year</span>
        </div>
        <p class="text-slate-500 text-sm font-medium">Total Teachers</p>
        <h3 class="text-2xl font-bold text-slate-800 dark:text-white"><%= Teachers.length %></h3>
      </div>

      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
        <div class="flex justify-between items-center mb-4">
          <div class="size-10 rounded-lg bg-emerald-50 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600">
            <span class="material-symbols-outlined">person_check</span>
          </div>
          <span class="text-slate-400 text-xs font-medium">Today</span>
        </div>
        <p class="text-slate-500 text-sm font-medium">Present Today</p>
        <h3 class="text-2xl font-bold text-slate-800 dark:text-white">--</h3> 
      </div>

      <% const inactiveTeachers = Teachers.filter(t => !t.isActive).length; %>
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
        <div class="flex justify-between items-center mb-4">
          <div class="size-10 rounded-lg bg-rose-50 dark:bg-rose-900/30 flex items-center justify-center text-rose-600">
            <span class="material-symbols-outlined">person_off</span>
          </div>
          <span class="text-rose-600 text-xs font-bold bg-rose-50 dark:bg-rose-900/20 px-2 py-1 rounded-full"><%= inactiveTeachers %> Inactive</span>
        </div>
        <p class="text-slate-500 text-sm font-medium">Inactive / On Leave</p>
        <h3 class="text-2xl font-bold text-slate-800 dark:text-white"><%= inactiveTeachers %></h3>
      </div>

      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
        <div class="flex justify-between items-center mb-4">
          <div class="size-10 rounded-lg bg-amber-50 dark:bg-amber-900/30 flex items-center justify-center text-amber-600">
            <span class="material-symbols-outlined">new_releases</span>
          </div>
          <span class="text-slate-400 text-xs font-medium">Last 30 days</span>
        </div>
        <p class="text-slate-500 text-sm font-medium">New Hires</p>
        <h3 class="text-2xl font-bold text-slate-800 dark:text-white">--</h3>
      </div>
    </div>

    <div class="bg-white dark:bg-slate-900 p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 flex flex-col lg:flex-row gap-4">
      <div class="flex-1 relative">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">search</span>
        <input class="w-full pl-10 pr-4 py-2 bg-slate-50 dark:bg-slate-800 border-none rounded-lg text-sm focus:ring-2 focus:ring-primary/20 dark:text-slate-200" placeholder="Search teacher by name or subject..." type="text" />
      </div>
      <div class="flex gap-4">
        <select class="bg-slate-50 dark:bg-slate-800 border-none rounded-lg text-sm py-2 px-4 focus:ring-2 focus:ring-primary/20 text-slate-600 dark:text-slate-300 min-w-[160px]">
          <option>All Departments</option>
          <option>Science</option>
          <option>Arts</option>
          <option>Commerce</option>
        </select>
        <button class="px-4 py-2 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
          <span class="material-symbols-outlined text-xl leading-none align-middle">filter_list</span>
        </button>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      
      <% if (Teachers && Teachers.length > 0) { %>
        <% Teachers.forEach((teacher) => { %>
          
          <% 
             let assignedClass = null;
             if (School.classes && School.classes.length > 0) {
                assignedClass = School.classes.find(c => c.classTeacher && c.classTeacher.toString() === teacher._id.toString());
             }
          %>

          <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-100 dark:border-slate-800 shadow-sm overflow-hidden flex flex-col hover:shadow-md transition-shadow">
            <div class="p-6 text-center flex-1">
              <div class="relative inline-block mb-4">
                <img 
                  alt="<%= teacher.name %>" 
                  class="size-24 rounded-full object-cover border-4 border-white dark:border-slate-800 shadow-md mx-auto" 
                  src="<%= teacher.profilePic && teacher.profilePic.url ? teacher.profilePic.url : 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png' %>" 
                />
                <span class="absolute bottom-1 right-1 size-5 <%= teacher.isActive ? 'bg-emerald-500' : 'bg-rose-500' %> border-4 border-white dark:border-slate-900 rounded-full"></span>
              </div>
              
              <h4 class="text-lg font-bold text-slate-800 dark:text-white mb-1">
                <%= teacher.name %>
              </h4>
              
              <p class="text-primary dark:text-indigo-400 font-semibold text-sm mb-4">
                <%= teacher.assignedSubject ? teacher.assignedSubject : 'General Faculty' %>
              </p>

              <% if (assignedClass) { %>
                <div class="flex items-center justify-center gap-2 text-slate-500 dark:text-slate-400 text-xs mb-6">
                  <span class="material-symbols-outlined text-sm">school</span>
                  Class Teacher: <%= assignedClass.className %>-<%= assignedClass.section %>
                </div>
              <% } else { %>
                 <div class="flex items-center justify-center gap-2 text-slate-400 text-xs mb-6 italic">
                  No class assigned
                </div>
              <% } %>

              <div class="flex justify-center gap-2">
                <span class="px-2.5 py-1 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 text-[10px] font-bold uppercase tracking-wider rounded-md">
                   <%= teacher.designation ? teacher.designation : 'Teacher' %>
                </span>
                <% if(teacher.isActive) { %>
                  <span class="px-2.5 py-1 bg-emerald-50 dark:bg-emerald-900/20 text-emerald-600 text-[10px] font-bold uppercase tracking-wider rounded-md">Active</span>
                <% } else { %>
                  <span class="px-2.5 py-1 bg-rose-50 dark:bg-rose-900/20 text-rose-600 text-[10px] font-bold uppercase tracking-wider rounded-md">Inactive</span>
                <% } %>
              </div>
            </div>
            
            <a href="/school/teacher/<%= teacher._id %>" class="w-full block text-center py-3 bg-slate-50 dark:bg-slate-800/50 text-slate-700 dark:text-slate-300 text-sm font-bold border-t border-slate-100 dark:border-slate-800 hover:bg-primary hover:text-white dark:hover:bg-primary transition-all">
              View Profile
            </a>
          </div>

        <% }) %>
      <% } else { %>
        <div class="col-span-full py-10 text-center">
            <p class="text-slate-500 text-lg">No teachers found in the directory.</p>
        </div>
      <% } %>

    </div>

    <div class="flex items-center justify-between pt-4 border-t border-slate-200 dark:border-slate-800">
      <p class="text-sm text-slate-500">
        Showing <span class="font-bold text-slate-800 dark:text-white"><%= Teachers.length %></span> Teachers
      </p>
      <div class="flex gap-2">
        <button disabled class="px-4 py-2 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-lg text-sm text-slate-600 dark:text-slate-300 opacity-50 cursor-not-allowed">
          Previous
        </button>
        <button class="px-4 py-2 bg-primary text-white border border-primary rounded-lg text-sm font-bold">
          1
        </button>
        <button class="px-4 py-2 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-lg text-sm text-slate-600 dark:text-slate-300 hover:bg-slate-50">
          Next
        </button>
      </div>
    </div>

  </div>
</main>