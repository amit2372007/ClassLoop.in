<div class="ml-64 flex-1 p-8">
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 flex flex-col gap-4">
        <div class="flex justify-between items-start">
          <div class="size-12 rounded-lg bg-indigo-50 dark:bg-indigo-900/30 flex items-center justify-center text-primary">
            <span class="material-symbols-outlined">account_balance</span>
          </div>
          <span class="text-emerald-500 text-xs font-bold bg-emerald-50 dark:bg-emerald-900/20 px-2 py-1 rounded-full">+12% vs LY</span>
        </div>
        <div>
          <p class="text-slate-500 text-sm font-medium">Total Collected</p>
          <h3 class="text-3xl font-bold text-slate-800 dark:text-white">
            â‚¹<%= stats.totalCollected.toLocaleString('en-IN') %>
          </h3>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 flex flex-col gap-4">
        <div class="flex justify-between items-start">
          <div class="size-12 rounded-lg bg-amber-50 dark:bg-amber-900/30 flex items-center justify-center text-amber-600">
            <span class="material-symbols-outlined">hourglass_empty</span>
          </div>
          <span class="text-amber-600 text-xs font-bold bg-amber-50 dark:bg-amber-900/20 px-2 py-1 rounded-full">Attention Needed</span>
        </div>
        <div>
          <p class="text-slate-500 text-sm font-medium">Pending Dues</p>
          <h3 class="text-3xl font-bold text-slate-800 dark:text-white">
             â‚¹<%= stats.pendingDues.toLocaleString('en-IN') %>
          </h3>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 flex flex-col gap-4">
        <div class="flex justify-between items-start">
          <div class="size-12 rounded-lg bg-emerald-50 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600">
            <span class="material-symbols-outlined">track_changes</span>
          </div>
          <span class="text-emerald-500 text-xs font-bold bg-emerald-50 dark:bg-emerald-900/20 px-2 py-1 rounded-full">On Track</span>
        </div>
        <div>
          <p class="text-slate-500 text-sm font-medium">Collection Target</p>
          <h3 class="text-3xl font-bold text-slate-800 dark:text-white"><%= stats.collectionPercentage %>%</h3>
        </div>
      </div>
      
      <a href="/school/feeStructure" class="flex items-center justify-center gap-2 bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold py-3 rounded-xl hover:opacity-90 transition-opacity">
        <span class="material-symbols-outlined">settings</span>
        Manage Fee Structures
      </a>

    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 overflow-hidden">
          <div class="px-6 py-5 border-b border-slate-100 dark:border-slate-800 flex items-center justify-between">
            <h3 class="text-lg font-bold text-slate-800 dark:text-white">Pending Dues & Defaulters</h3>
            <div class="flex gap-2">
              <button class="px-3 py-1.5 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 text-sm font-medium rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800">Export</button>
              <button class="px-3 py-1.5 bg-primary text-white text-sm font-medium rounded-lg hover:bg-primary/90">Bulk Remind</button>
            </div>
          </div>
          
          <div class="overflow-x-auto">
            <table class="w-full text-left">
              <thead class="bg-slate-50 dark:bg-slate-800/50">
                <tr>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Student Name</th>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Class</th>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Balance</th>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Due Date</th>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-right">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                
                <% if(defaulters.length > 0) { %>
                  <% defaulters.forEach(fee => { %>
                    <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/30 transition-colors">
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <img 
                            alt="<%= fee.student ? fee.student.name : 'Unknown' %>" 
                            class="size-8 rounded-full object-cover" 
                            src="<%= fee.student && fee.student.profilePic && fee.student.profilePic.url ? fee.student.profilePic.url : 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png' %>" 
                          />
                          <span class="text-sm font-semibold text-slate-800 dark:text-white">
                            <%= fee.student ? fee.student.name : 'Unknown Student' %>
                          </span>
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400">
                        <%= fee.class ? `Class ${fee.class.className}-${fee.class.section}` : 'N/A' %>
                      </td>
                      <td class="px-6 py-4 text-sm font-bold text-slate-800 dark:text-white">
                        â‚¹<%= fee.calculatedBalance.toLocaleString('en-IN') %>
                      </td>
                      <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400">
                        <%= new Date(fee.dueDate).toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) %>
                      </td>
                      <td class="px-6 py-4">
                        <% if(fee.status === 'Overdue') { %>
                            <span class="px-2.5 py-0.5 bg-rose-50 dark:bg-rose-900/20 text-rose-600 text-xs font-bold rounded-full">Overdue</span>
                        <% } else if(fee.status === 'Partial') { %>
                            <span class="px-2.5 py-0.5 bg-amber-50 dark:bg-amber-900/20 text-amber-600 text-xs font-bold rounded-full">Partial</span>
                        <% } else { %>
                            <span class="px-2.5 py-0.5 bg-slate-100 dark:bg-slate-800 text-slate-600 text-xs font-bold rounded-full">Pending</span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-right">
                        <button class="px-3 py-1.5 bg-indigo-600 text-white text-xs font-bold rounded-lg hover:bg-indigo-700 transition-colors">Remind</button>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-slate-500">No pending dues found! ðŸŽ‰</td>
                    </tr>
                <% } %>

              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="space-y-6">
        
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-sm font-bold text-slate-800 dark:text-white">Collection Trend</h3>
            <span class="text-xs text-slate-500 font-medium">Monthly</span>
          </div>
          <div class="h-48 flex items-end justify-between gap-2">
            <div class="flex-1 bg-indigo-100 dark:bg-indigo-900/20 h-1/4 rounded-sm"></div>
            <div class="flex-1 bg-indigo-200 dark:bg-indigo-900/40 h-2/5 rounded-sm"></div>
            <div class="flex-1 bg-indigo-300 dark:bg-indigo-900/60 h-3/5 rounded-sm"></div>
            <div class="flex-1 bg-indigo-400 dark:bg-indigo-600/80 h-4/5 rounded-sm"></div>
            <div class="flex-1 bg-indigo-600 h-full rounded-sm"></div>
            <div class="flex-1 bg-indigo-300 dark:bg-indigo-900/60 h-3/4 rounded-sm"></div>
          </div>
        </div>

        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800">
          <h3 class="text-sm font-bold text-slate-800 dark:text-white mb-6">Recent Successful Payments</h3>
          <div class="space-y-4">
            
            <% if(recentPayments.length > 0) { %>
                <% recentPayments.forEach(pay => { %>
                    <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50 border border-slate-100 dark:border-slate-800">
                      <div class="flex items-center gap-3">
                        <div class="size-8 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600">
                          <span class="material-symbols-outlined text-sm">check</span>
                        </div>
                        <div>
                          <p class="text-xs font-bold text-slate-800 dark:text-white">
                             <%= pay.student ? pay.student.name : 'Unknown' %>
                          </p>
                          <p class="text-[10px] text-slate-500">
                             <%= new Date(pay.updatedAt).toLocaleDateString() %> â€¢ <%= pay.month %>
                          </p>
                        </div>
                      </div>
                      <span class="text-xs font-bold text-emerald-600">+â‚¹<%= pay.amountPaid.toLocaleString('en-IN') %></span>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-xs text-slate-500 text-center">No recent payments received.</p>
            <% } %>

          </div>
          <button class="w-full mt-6 py-2.5 border border-primary/20 text-primary text-xs font-bold rounded-lg hover:bg-primary/5 transition-colors">
            Download Receipt History
          </button>
        </div>

      </div>
    </div>
  </div>
</main>