<div class="flex-1 ml-[var(--sidebar-width)] max-md:ml-0 flex flex-col min-h-screen bg-slate-900 text-white">
    <main class="flex-1 px-8 py-10 max-md:px-4 max-md:py-6 max-md:pb-24">
        <div class="mb-8 max-md:mb-5">
            <h2 class="text-3xl font-bold text-white max-md:text-2xl">Applications &amp; Leaves</h2>
            <p class="text-slate-400 mt-1 max-md:text-sm">
                Submit new requests and track your application status.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 max-md:gap-5">
            <div class="lg:col-span-5">
                <div
                    class="rounded-xl shadow-sm border border-slate-700 p-8 sticky top-28 bg-slate-800/50 backdrop-blur-sm max-md:p-5 max-md:static">
                    <div class="flex items-center gap-3 mb-6 max-md:mb-4">
                        <span class="material-symbols-outlined text-[var(--primary-blue)]">edit_note</span>
                        <h3 class="text-xl font-bold text-white max-md:text-lg">New Application</h3>
                    </div>

                    <form action="/loopSpace/<%= loopSpace._id %>/application" method="POST" class="space-y-5 max-md:space-y-4">
                        <div>
                            <label class="block text-sm font-semibold text-slate-300 mb-1.5">Request Type</label>
                            <select name="type" required
                                class="w-full rounded-lg bg-transparent border-slate-600 text-sm text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 py-2.5 [&>option]:bg-slate-800 [&>option]:text-white">
                                <option value="">Select type...</option>
                                <option value="Leave">Sick Leave / Casual Leave</option>
                                <option value="Bonafide Certificate">Bonafide Certificate</option>
                                <option value="Complaint">Complaint / Grievance</option>
                                <option value="Transfer Certificate">Transfer Certificate</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-300 mb-1.5">Subject</label>
                            <input name="subject" required
                                class="w-full rounded-lg bg-transparent border-slate-600 text-sm text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 py-2.5"
                                placeholder="Brief title of your request" type="text" />
                        </div>

                        <div class="grid grid-cols-2 gap-4 max-md:gap-3">
                            <div>
                                <label class="block text-sm font-semibold text-slate-300 mb-1.5">From Date</label>
                                <input name="fromDate" required
                                    class="w-full rounded-lg bg-transparent border-slate-600 text-sm text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 py-2.5"
                                    type="date" />
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-300 mb-1.5">To Date</label>
                                <input name="toDate" required
                                    class="w-full rounded-lg bg-transparent border-slate-600 text-sm text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 py-2.5"
                                    type="date" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-300 mb-1.5">Detailed Reason</label>
                            <textarea name="reason" required
                                class="w-full rounded-lg bg-transparent border-slate-600 text-sm text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Explain your request in detail..." rows="4"></textarea>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-300 mb-1.5">Attachments
                                (Optional)</label>
                            <div
                                class="border-2 border-dashed border-slate-600 rounded-lg p-6 flex flex-col items-center justify-center bg-slate-800/30 hover:bg-blue-900/20 hover:border-blue-400 transition-colors cursor-pointer group max-md:p-4">
                                <span
                                    class="material-symbols-outlined text-slate-400 group-hover:text-[var(--primary-blue)] text-3xl mb-2">cloud_upload</span>
                                <p class="text-xs text-slate-400 font-medium">Click to upload or drag and drop</p>
                            </div>
                        </div>

                        <button
                            class="w-full bg-[var(--primary-blue)] hover:bg-blue-600 text-white font-bold py-3.5 rounded-lg shadow-lg shadow-blue-500/20 transition-all flex items-center justify-center gap-2 max-md:py-3"
                            type="submit">
                            <span class="material-symbols-outlined text-xl">send</span>
                            Submit Request
                        </button>
                    </form>
                </div>
            </div>

            <div class="lg:col-span-7 flex flex-col">
                <div class="flex items-center justify-between mb-6 max-md:mb-4">
                    <div class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-slate-400">history</span>
                        <h3 class="text-xl font-bold text-white max-md:text-lg">My History</h3>
                    </div>
                    <div class="flex gap-2">
                        <button
                            class="bg-blue-600 border border-blue-500 px-4 py-1.5 rounded-full text-xs font-semibold text-white transition-colors">All</button>
                        <button
                            class="bg-transparent border border-slate-600 px-4 py-1.5 rounded-full text-xs font-semibold text-slate-300 hover:bg-slate-800 transition-colors">Pending</button>
                    </div>
                </div>

                <div class="space-y-4 max-h-[1000px] overflow-y-auto pr-2 custom-scrollbar max-md:max-h-none max-md:overflow-visible max-md:pr-0">

                    <% if(application && application.length> 0) { %>
                        <% application.forEach(app=> { %>

                            <div
                                class="bg-slate-800/50 rounded-xl border border-slate-700 overflow-hidden shadow-sm hover:border-blue-500/50 transition-colors">
                                <div class="p-5 max-md:p-4">
                                    <div class="flex items-center justify-between mb-3">
                                        <div class="flex items-center gap-2 flex-wrap">
                                            <span
                                                class="bg-blue-900/30 text-blue-400 text-[10px] font-bold px-2 py-0.5 rounded tracking-wide uppercase border border-blue-900/50">
                                                <%= app.type %>
                                            </span>
                                            <span class="text-slate-400 text-xs font-medium italic">
                                                Applied on <%= new Date(app.createdAt).toLocaleDateString() %>
                                            </span>
                                            <% if(app.status === 'pending') { %>
                                            <form action="/loopSpace/application/<%= app._id %>?_method=DELETE"
                                                method="POST" class="inline-block ml-auto"
                                                onsubmit="return confirm('Are you sure you want to delete this request? This cannot be undone.');">
                                                <button type="submit"
                                                    class="group flex items-center justify-center p-2 rounded-full hover:bg-red-50 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-500/20"
                                                    title="Delete Request">
                                                    <span
                                                        class="material-symbols-outlined text-slate-400 text-[18px] group-hover:text-red-500 transition-colors">
                                                        delete
                                                    </span>
                                                </button>
                                            </form>
                                            <% } %>
                                        </div>

                                        <% if(app.status==='Pending' ) { %>
                                            <span
                                                class="inline-flex items-center gap-1 bg-yellow-900/20 text-yellow-400 px-3 py-1 rounded-full text-[11px] font-bold border border-yellow-700/30 shrink-0">
                                                <span class="size-1.5 rounded-full bg-yellow-400"></span> Pending
                                            </span>
                                            <% } else if (app.status==='Approved' ) { %>
                                                <span
                                                    class="inline-flex items-center gap-1 bg-green-900/20 text-green-400 px-3 py-1 rounded-full text-[11px] font-bold border border-green-700/30 shrink-0">
                                                    <span class="size-1.5 rounded-full bg-green-400"></span> Approved
                                                </span>
                                                <% } else { %>
                                                    <span
                                                        class="inline-flex items-center gap-1 bg-red-900/20 text-red-400 px-3 py-1 rounded-full text-[11px] font-bold border border-red-700/30 shrink-0">
                                                        <span class="size-1.5 rounded-full bg-red-400"></span> Rejected
                                                    </span>
                                                    <% } %>
                                    </div>

                                    <h4 class="text-lg font-bold text-white mb-2 max-md:text-base">
                                        <%= app.subject %>
                                    </h4>

                                    <p class="text-sm text-slate-400 line-clamp-2">
                                        <%= app.reason %>
                                    </p>

                                    <% if(app.dateRange && app.dateRange.from) { %>
                                        <p class="text-xs text-slate-500 mt-2">
                                            Date: <%= new Date(app.dateRange.from).toLocaleDateString() %> - <%= new
                                                    Date(app.dateRange.to).toLocaleDateString() %>
                                        </p>
                                        <% } %>
                                </div>

                                <div class="bg-slate-800/80 border-t border-slate-700 px-5 py-3 max-md:px-4">
                                    <div class="flex items-start gap-2">
                                        <span
                                            class="material-symbols-outlined text-slate-500 text-sm mt-0.5">comment</span>
                                        <div class="text-xs">
                                            <span class="font-bold text-slate-400">Teacher Remarks:</span>
                                            <% if(app.teacherRemarks) { %>
                                                <span class="text-slate-300 ml-1">
                                                    <%= app.teacherRemarks %>
                                                </span>
                                                <% } else { %>
                                                    <span class="text-slate-500 italic ml-1">No remarks yet.</span>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <% }) %>
                                <% } else { %>
                                    <div class="flex flex-col items-center justify-center py-10 text-slate-500">
                                        <span class="material-symbols-outlined text-4xl mb-2">inbox</span>
                                        <p>No applications found.</p>
                                    </div>
                                    <% } %>

                </div>
            </div>
        </div>
    </main>

   
</div>
