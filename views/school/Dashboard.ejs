<%- include("../includes/loader.ejs") -%>
    <% layout("/layout/boilerplate2.ejs") -%>

        <title>Principal Global Dashboard - ClassLoop.in</title>
        <script id="tailwind-config">
            tailwind.config = {
                darkMode: "class",
                theme: {
                    extend: {
                        colors: {
                            "primary": "#5048e5",
                            "background-light": "#f6f6f8",
                            "background-dark": "#121121",
                            "slate-custom": "#1e293b",
                        },
                        fontFamily: {
                            "display": ["Inter", "sans-serif"]
                        },
                        borderRadius: {
                            "DEFAULT": "0.5rem",
                            "lg": "1rem",
                            "xl": "1.5rem",
                            "full": "9999px"
                        },
                    },
                },
            }
        </script>
        <style>
            body {
                font-family: 'Inter', sans-serif;
            }

            .material-symbols-outlined {
                font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            }

            .sidebar-item-active {
                background-color: rgba(80, 72, 229, 0.15);
                color: #5048e5;
                border-right: 4px solid #5048e5;
            }
        </style>
        </head>

        <body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 font-display">
            <div class="flex min-h-screen">
                <!-- Sidebar -->
                <aside class="w-64 bg-slate-custom dark:bg-black fixed h-full flex flex-col shadow-xl z-20">
                    <div class="p-6 flex items-center gap-3">
                        <div class="size-10 bg-primary rounded-lg flex items-center justify-center text-white">
                            <span class="material-symbols-outlined text-2xl">school</span>
                        </div>
                        <div>
                            <h1 class="text-white text-lg font-bold leading-none">ClassLoop.in</h1>
                            <p class="text-slate-400 text-xs mt-1">Principle Dashboard</p>
                        </div>
                    </div>
                    <nav class="flex-1 px-4 py-4 space-y-1 overflow-y-auto">
                        <a class="flex text-white items-center gap-3 px-4 py-3 text-sm font-medium rounded-lg <%= activeTab === 'Dashboard' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Dashboard">
                            <span class="material-symbols-outlined">dashboard</span>
                            Dashboard
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Calendar' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Calendar">
                            <span class="material-symbols-outlined">calendar_today</span>
                            Calendar
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Expenses' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Expenses">
                            <span class="material-symbols-outlined">account_balance_wallet</span>
                            Expenses
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Teachers' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Teachers">
                            <span class="material-symbols-outlined">person_pin</span>
                            Teachers
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Employees' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Employees">
                            <span class="material-symbols-outlined">badge</span>
                            Employees
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Students' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Students">
                            <span class="material-symbols-outlined">group</span>
                            Students
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Requests' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Requests">
                            <span class="material-symbols-outlined">pending_actions</span>
                            Requests
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Fees' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Fees">
                            <span class="material-symbols-outlined">payments</span>
                            Fees
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Transport' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Transport">
                            <span class="material-symbols-outlined">directions_bus</span>
                            Transport
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors <%= activeTab === 'Complaints' ? 'sidebar-item-active' : '' %>"
                            href="/school?tab=Complaints">
                            <span class="material-symbols-outlined">report_problem</span>
                            Complaints
                        </a>
                    </nav>
                    <div class="p-4 border-t border-slate-700">
                        <a class="flex items-center gap-3 px-4 py-3 text-slate-300 hover:bg-white/10 hover:text-white text-sm font-medium rounded-lg transition-colors"
                            href="#">
                            <span class="material-symbols-outlined">settings</span>
                            Settings
                        </a>
                        <a class="flex items-center gap-3 px-4 py-3 text-red-400 hover:bg-red-400/10 text-sm font-medium rounded-lg transition-colors"
                            href="/user/logout">
                            <span class="material-symbols-outlined">logout</span>
                            Logout
                        </a>
                    </div>
                </aside>

                <% if(activeTab==="Dashboard" ) { %>

                    <%- include('../includes/principleDashboard/Dashboard.ejs') %>

                <% } else if(activeTab==='Expenses' ) { %>

                    <%- include('../includes/principleDashboard/Expenses.ejs') %>

                <% } else if(activeTab==='Teachers' ) { %>

                    <%- include('../includes/principleDashboard/Teachers.ejs') %>

                <% } else if(activeTab==='Employees' ) { %>

                    <%- include('../includes/principleDashboard/Employes.ejs') %>

                <% } else if(activeTab==='Students' ) { %>

                    <%- include('../includes/principleDashboard/Students.ejs') %>

                <% } else if(activeTab==='Requests' ) { %>

                    

                <% } else if(activeTab==='Fees' ) { %>

                    <%- include('../includes/principleDashboard/Fees.ejs') %>

                <% } else if(activeTab==='Transport' ) { %>

                    

                <% } else if(activeTab==='Complaints' ) { %>

                    

                <% } else if(activeTab==='Settings' ) { %>

                    <%- include('../includes/principleDashboard/Settings.ejs') %>

                <% } else { %>

                    <%- include('../includes/principleDashboard/Dashboard.ejs') %>

                <% } %>
            </div>
            <script src="/js//loader.js"></script>
        </body>