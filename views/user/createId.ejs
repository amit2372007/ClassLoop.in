<% layout("/layout/boilerplate.ejs") -%>

<body>
<form action="/signup" method="POST">
<div class="field">
  <label class="label">Name</label>
  <div class="control">
    <input name="name" class="input" type="text" placeholder="Text input">
  </div>
</div>

<div class="field">
  <label class="label">Username</label>
  <div class="control has-icons-left has-icons-right">
    <input name="username"  class="input is-success" type="text" placeholder="Text input" value="bulma">
    <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
  <p class="help is-success">This username is available</p>
</div>

<div class="field">
  <p class="control has-icons-left">
    <input name="password" class="input" type="password" placeholder="Password">
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>

<div class="field is-horizontal">
  <div class="field-label"></div>
  <div class="field-body">
    <div class="field is-expanded">
      <div class="field has-addons">
        <p class="control">
          <a class="button is-static">
            +91
          </a>
        </p>
        <p class="control is-expanded">
          <input name="phone" class="input" type="tel" placeholder="Your phone number">
        </p>
      </div>
      <p class="help">Do not enter the first zero</p>
    </div>
  </div>
</div>

<div class="field">
  <label class="label">Bio</label>
  <div class="control">
    <textarea name="bio" class="textarea" placeholder="Tell us About you"></textarea>
  </div>
</div>

<div class="field">
  <label class="label">Profile Picture</label>
  <div class="control">
    <input name="profilePic" class="input" type="text" placeholder="Input Profile Picture URL">
  </div>
</div>

  <div class="field is-grouped">
       <div class="control">
       <button class="button is-link">Submit</button>
      </div>
    <div class="control">
       <button class="button is-link is-light">Cancel</button>
    </div>
</div>



</form>
  
</body>